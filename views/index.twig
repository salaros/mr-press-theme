{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{ post.post_type }} col-xs-12" id="post-{{ post.ID }}" data-template="index.twig">
    <section class="article-content">
        <p class="altert alert-warning">
            <b>This page is displayed using index.twig template:</b>
            index.php template has the lowest priority in WordPress <a href="https://developer.wordpress.org/themes/basics/template-hierarchy">template hierarchy</a>.<br>
            Please consider implementing specilized templates such as author.php, embed.php, category.php, tag.php etc<br>
            since they have precedence over index.php
        </p>
        {% if post.title %}
        <h2 class="article-h2">{{ post.title }}</h2>
        {% endif %}
        <div class="article-body">
            {% if function('have_posts') %}
            {% set post = function('the_post') %}
            {{ function('the_content') }}
            {% endif %}
        </div>
    </section>
</article>
{% endblock %}
