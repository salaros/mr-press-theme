<header class="header" >
    {% block header %}
	<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">{{site.name}}</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
			<div id="navbar" class="navbar-collapse collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    {% for item in menu.get_items %}
                    {% if item.get_children %}
                    <li class="dropdown {{item.classes | join(' ')}}">
                        <a href="{{item.get_link|default('#')}}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {{item.title}} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            {% for children in item.get_children %}
                            <li><a href="{{children.get_link}}">{{children.title}}</a>
                                {% endfor %}
                        </ul>
                        {% else %}
                    <li class="nav-item {{item.classes | join(' ')}}">
                        <a class="nav-link" href="{{item.get_link}}">{{item.title}}</a>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
    {% endblock %}
</header>
