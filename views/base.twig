{% block html_head_container %}
    {% include 'html-header.twig' %}
    {% block head %}
        {# you can add extra head entries, such as meta values etc #}
        {# by re-defining this block in templates extending base.twig #}
    {% endblock %}
</head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">

    {% block header %}
        {% include ('header.twig') %}
    {% endblock %}

    <section id="content" role="main" class="container container-main clear-top">
        <div class="row content-wrapper {{sidebar_class}}">
            {% block title %}
            {% if title %}
            <header class="col-xs-12">
                <h1 class="article-h1">{{title}}</h1>
            </header>
            {% endif %}
            {% endblock %}
            {% block content %}
                {{ 'Sorry, no content'|translate }}
            {% endblock %}
        </div><!-- /content-wrapper -->
		{% if sidebar %}
        <aside class="layout-sidebar">
            {{sidebar}}
        </aside>
		{% endif %}
	</section>

	{% block footer %}
	   {% include 'footer.twig' %}
	{% endblock %}

	{{ function('wp_footer') }}
</body>
</html>
