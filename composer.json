{
    "name"                  : "salaros/mr-press-theme",
    "description"           : "Makes part of Mr. Press project. You should not change its code, please use 'mr-press-theme-child' instead",
    "type"                  : "wordpress-theme",
    "license"               : "MIT",
    "authors"               : [
        {
            "name"          : "Upstatement team",
            "homepage"      : "http://upstatement.com",
            "role"          : "Author"
        },
        {
            "name"          : "Zhmayev Yaroslav",
            "email"         : "salaros@salaros.com",
            "homepage"      : "https://github.com/salaros",
            "role"          : "Developer"
        }
    ],
    "repositories"          : [
        {
            "type"          : "composer",
            "url"           : "http://wpackagist.org"
        }
    ],
    "require": {
        "wpackagist-plugin/timber-library"          : "*",
        "wpackagist-plugin/advanced-custom-fields"  : "*"
    },
    "extra": {
        "installer-paths": {
            "../../plugins/{$name}/"    : [
                "type:wordpress-plugin"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Salaros\\Wordpress\\Template\\": "classes/"
        }
    },
    "minimum-stability"                 : "stable",
    "prefer-stable"                     : true
}
