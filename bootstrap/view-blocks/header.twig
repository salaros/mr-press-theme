<header class="header" data-template="header.twig">
	<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-static-navbar" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ site.url }}">
                    {{ site.name }}
                </a>
            </div>

            {% if top_nav_menu %}
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="navbar-collapse collapse" id="top-static-navbar">
                <!-- main menu items -->
                {% include 'menu-items.twig' with { 'menu': top_nav_menu } %}
                <!-- /main menu items -->
                <!-- search button -->
                {% include 'menu-search-button.twig' %}
                <!-- /search button -->
                <!-- login menu -->
                {% include 'menu-login.twig' %}
                <!-- /login menu -->
            </div>
            {% endif %}
        </div>
    </nav>
</header>
