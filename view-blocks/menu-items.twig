<ul class="nav navbar-nav">
    {% for item in menu.get_items %}
    {% if item.get_children %}
    <li class="dropdown {{ item.classes | join(' ') }} {{ (item.current_item_ancestor) ? 'active' : '' }}">
        <a href="{{ item.get_link|default('#') }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            {{ item.title }} <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            {% for children in item.get_children %}
            <li><a href="{{ children.get_link }}">{{ children.title }}</a>
                {% endfor %}
        </ul>
    </li>
    {% else %}
    <li class="nav-item {{ item.classes | join(' ') }} {{ (item.current) ? 'active' : '' }}">
        <a class="nav-link" href="{{ item.get_link }}">{{ item.title }}</a>
    </li>
    {% endif %}
    {% endfor %}
</ul>
